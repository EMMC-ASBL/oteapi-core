{
  "name": "Image",
  "version": "0.1",
  "namespace": "http://compevo/ontotrans.emmc.eu",
  "meta": "http://onto-ns.com/meta/0.3/EntitySchema",
  "description": "Representation an experimental image.",
  "dimensions": [
    {
      "name": "height",
      "description": "Image height"
    },
    {
      "name": "width",
      "description": "Image width"
    },
    {
      "name": "channels",
      "description": "Number of channels. Typically 3 (rgb), 4 (rgba) or 1 (grayscale)"
    }
  ],
  "properties": [
    {
      "name": "data",
      "type": "uint8",
      "dims": ["height", "width", "channels"],
      "description": "Image data."
    },
    {
      "name": "scale",
      "type": "float64",
      "unit": "μm/pixel",
      "description": "Image scaling in μm/pixel."
    }
  ]
}
